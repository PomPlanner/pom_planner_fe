<%= form_with url: search_path, method: :get, local: true do %>
  <div class="field">
    <%= label_tag :q, "Search" %>
    <%= text_field_tag :q, params[:q] %>
  </div>

  <div class="field">
    <%= label_tag :duration, "Duration" %>
    <%= select_tag :duration, options_for_select([['Any', 'any'], ['Long', 'long'], ['Medium', 'medium'], ['Short', 'short']], params[:duration]) %>
  <div>

  <div class="actions">
    <%= submit_tag "Search", class: "btn btn-primary" %>
  </div>
<% end %>