<%= turbo_stream.replace "favorite-videos" do %>
  <%= render partial: "videos/favorite_videos", locals: { favorite_videos: @favorite_videos } %>
<% end %>

<%= turbo_stream.replace "search-results" do %>
  <%= render partial: "search/results", locals: { videos: @videos } %>
<% end %>

<%= turbo_stream.append "flash-messages" do %>
  <%= render partial: "shared/flash", locals: { notice: "Video added to favorites" } %>
<% end %>
